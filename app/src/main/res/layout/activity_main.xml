<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type in the name of a City"
        android:textColor="#FF3D00"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/cityfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type City Name Here"
        android:textSize="20sp" />

    <Button
        android:id="@+id/forecastButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Get Forecast"
        app:iconTint="#9C27B0" />

    <TextView
        android:id="@+id/temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Temp Goes Here"
        android:visibility="invisible"
        android:textColor="#D82BF6" />
    <TextView
        android:id="@+id/Maxtemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Max Temp Goes Here"
        android:textColor="#D82BF6"
        />
    <TextView
        android:id="@+id/Mintemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Min Temp Goes Here"
        android:textColor="#D82BF6"
        />
    <TextView
        android:id="@+id/humidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Humidity Goes Here"
        android:textColor="#D82BF6"
        />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/gamep" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description Goes Here"
        android:textColor="#5D15DD"
        />


</LinearLayout>